 
.list-msg {
    padding: 0 20rpx;
    background-color: #fff;
    position: relative;
}
.list-msg .list-msg2 {
    height: 60rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border: 1px solid #ccc;
    padding: 0 10rpx;
}
.select_box {
    background-color: #eee;
    padding: 0 10rpx;
    width: 93%;
    position: absolute;
    top: 60rpx;
    z-index: 1;
    overflow: hidden;
    animation: myfirst 0.5s;
}
@keyframes myfirst {
    from {
        height: 0rpx;
    }
    to {
        height:100%;
    }
}
.select_one {
    height: 60rpx;
    line-height: 60rpx;
    border-bottom: 1px solid #ccc;
}
.btn{
  margin-top:20rpx;
}